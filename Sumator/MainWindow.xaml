        <Label Grid.Column="1" Grid.Row="6" Content="TRUE - 1" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <Label Grid.Column="1" Grid.Row="7" Content="FALSE - 0" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <Label Grid.Column="5" Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Left" Content="First" FontWeight="Bold"/>
        <Label Grid.Column="5" Grid.Row="7" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Second" FontWeight="Bold"/>

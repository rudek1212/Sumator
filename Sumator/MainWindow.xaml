            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="2" Grid.Row="1" Content="A3" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Label Grid.Column="3" Grid.Row="1" Content="B3" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Label Grid.Column="5" Grid.Row="1" Content="A2" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Label Grid.Column="6" Grid.Row="1" Content="B2" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Label Grid.Column="8" Grid.Row="1" Content="A1" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Label Grid.Column="9" Grid.Row="1" Content="B1" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Label Grid.Column="11" Grid.Row="1" Content="A0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Label Grid.Column="12" Grid.Row="1" Content="B0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <Label Grid.Column="14" Grid.Row="3" Content="C0" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
        <Label Grid.Column="0" Grid.Row="3" Content="C3" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="Bold"/>
        <Label Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="5" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center"  Content="S3"/>
        <Label Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="5" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center"  Content="S2"/>
        <Label Grid.Column="8" Grid.ColumnSpan="2" Grid.Row="5" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center"  Content="S1"/>

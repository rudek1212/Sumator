        <Button Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="2" Margin="20 0 0 0" Height="15" Background="Red"/>
        <Button Grid.Column="8" Grid.Row="6" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="5" Content="CALCULATE" FontWeight="Bold" Click="CalculateButtonClick"/>

        <TextBox Grid.Row="6" Grid.Column="6" Margin="10 10 3 10" Name="BoxNumber0" KeyDown="BoxNumber0_KeyDown"/>
        <TextBox Grid.Row="7" Grid.Column="6" Margin="10 10 3 10" Name="BoxNumber1" KeyDown="BoxNumber1_KeyDown"/>
        <TextBox Grid.Row="6" Grid.Column="7" Margin="3 10 10 10" Name="BoxBinNumber0" IsEnabled="False" />
        <TextBox Grid.Row="7" Grid.Column="7" Margin="3 10 10 10" Name="BoxBinNumber1" IsEnabled="False"/>
        <TextBox Grid.Row="6" Grid.Column="11" Margin="3 10 10 10" Name="BoxOutputBin" IsEnabled="False"/>
        <TextBox Grid.Row="7" Grid.Column="11" Margin="3 10 10 10" Name="BoxOutputDec" IsEnabled="False"/>

